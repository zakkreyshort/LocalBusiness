<h1> Create a category </h1>

@model LocalBusinessInterface.Models.Category

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Create Category</h1>
    @using (Html.BeginForm())
    {
      <div class="form-group">
        <p>Category Name</p>
        @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>Category Description</p>
        @Html.TextBoxFor(model => model.Description, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>Category Banner Image</p>
        @Html.TextBoxFor(model => model.BannerImage, new {@class="form-control"})
      </div>
      <button type="submit" class="btn btn-info btn-block"> Add a Category </button>
    }
  </div>
</div>