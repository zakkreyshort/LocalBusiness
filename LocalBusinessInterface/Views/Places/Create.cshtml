@model LocalBusinessInterface.Models.Place

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Add Place</h1>
    view bag = @ViewBag.categoryId
    @using (Html.BeginForm("Create", "Places"))
    {
      <input type="hidden" name="categoryId" value="@ViewBag.categoryId">
      <div class="form-group">
        <p>Place Name</p>
        @Html.TextBoxFor(model => model.Title, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>Place Description</p>
        @Html.TextBoxFor(model => model.Body, new {@class="form-control"})
      </div>
      <div class="form-group">
        <p>Image</p>
        @Html.TextBoxFor(model => model.ImageSource, new {@class="form-control"})
      </div>
      <button type="submit" class="btn btn-info btn-block"> Add a Place </button>
    }
  </div>
</div>